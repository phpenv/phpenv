                   --enable-exif
                   --enable-ftp
                   --with-png-dir=/usr/local/opt/libpng
                   --with-jpeg-dir=/usr/local/opt/jpeg
                   --with-freetype-dir=/usr/local/opt/freetype
                   --with-gd
                   --enable-gd-native-ttf
                   --with-pear
                   --with-ldap=/usr
                   --with-ldap-sasl=/usr
                   --enable-mbstring
