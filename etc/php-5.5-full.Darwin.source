                   --with-openssl=/usr/local/opt/openssl
                   --with-openssl-dir=/usr/local/opt/openssl
                   --with-kerberos=/usr
                   --with-zlib
                   --with-zlib-dir=/usr/local/opt/zlib
                   --enable-bcmath
                   --with-bz2=/usr
